@model Notification

@{
    if (Model != null)
    {
        <h4 class="text-center">معلومات الاشعار</h4>
        <hr />

        <div class="row">
            <div class="col-12">
                <form asp-controller="Notifications" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Title" class="control-label">عنوان الاشعار</label>
                        <textarea asp-for="Title" class="form-control"></textarea>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Text" class="control-label">نص الاشعار</label>
                        <textarea asp-for="Text" class="form-control"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mb-2">
                        <label class="form-check-label"><input class="form-check-input" asp-for="Active" />الظهور</label>
                    </div>
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="ReceivedCount" type="hidden" />
                    <input asp-for="OpenedCount" type="hidden" />
                    <div class="form-group">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-2">
            <a class="btn btn-outline-dark" asp-controller="Notifications" asp-action="Index">عودة إلى القائمة</a>
        </div>
    }
    else
    {
        @await Html.PartialAsync("_PageNotFound")
    }
}