@model Category

@{
    if (Model != null)
    {
        <div>
            <h1 class="text-center">حذف التصنيف</h1>
            <h3>هل أنت متأكد أنك تريد حذف هذا؟</h3><hr>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">الاسم</dt>
                    <dd class="col-sm-10">@((string.IsNullOrWhiteSpace(Model.Name)) ? string.Empty : Model.Name)</dd>

                    <dt class="col-sm-2">صورة الغلاف</dt>
                    <dd class="col-sm-10"><img src="@(Model.CoverPath)" alt="!حدث خطأ أثناء عرض الصورة" style="width: 256px; height: 256px; object-fit: cover;" /></dd>

                    <dt class="col-sm-2">عدد الحالات</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.StatusCount)</dd>

                    <dt class="col-sm-2">الظهور</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Active)</dd>

                    <dt class="col-sm-2">التاريخ</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
                </dl>

                <form asp-controller="Categories" asp-action="Delete">
                    <input asp-for="CoverPath" type="hidden" />
                    <input type="submit" value="حذف" class="btn btn-danger" />
                    <a class="btn btn-outline-dark" asp-controller="Categories" asp-action="Index">عودة إلى القائمة</a>
                </form>
            </div>
        </div>
    }
    else
    {
        @await Html.PartialAsync("_PageNotFound")
    }
}