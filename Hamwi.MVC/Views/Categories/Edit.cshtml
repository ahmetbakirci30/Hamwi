@model CategoryViewModel

@{
    if (Model != null)
    {
        <h4 class="text-center">معلومات التصنيف</h4>
        <hr />

        <div class="row">
            <div class="col-12">
                <form asp-controller="Categories" asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Name" class="control-label">الاسم</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CoverImageFile" class="control-label">صورة الغلاف</label>
                        <input asp-for="CoverImageFile" class="form-control" type="file" accept="image/*" />
                        <img class="mt-1" src="@Model.CoverPath" alt="!حدث خطأ أثناء عرض الصورة" style="width: 128px; height: 128px; object-fit: cover;" />
                        <span asp-validation-for="CoverImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mb-2">
                        <label class="form-check-label"><input class="form-check-input" asp-for="Active" />الظهور</label>
                    </div>
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CoverPath" type="hidden" />
                    <input asp-for="StatusCount" type="hidden" />
                    <div class="form-group">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-2">
            <a class="btn btn-outline-dark" asp-controller="Categories" asp-action="Index">عودة إلى القائمة</a>
        </div>
    }
    else
    {
        @await Html.PartialAsync("_PageNotFound")
    }
}